pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.17' }
  }
  environment {
    DATABASE_URL='jdbc:postgresql://localhost:5432/postgres'
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:postgresql://localhost:5432/postgres" --changeLogFile=my_app-wrapper.xml --username=postgres --password=fellaini'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:postgresql://localhost:5432/postgres" --changeLogFile=my_app-wrapper.xml --username=postgres --password=fellaini'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
